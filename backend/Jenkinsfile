pipeline{
    agent any
    tools {
        maven 'maven'
    }
    stages{
        stage("Git Checkout"){
            steps{
                git branch: 'main', url: 'https://github.com/siswarnava-sss/ecommerce2'
            }
        }
        stage("Go to backend folder"){
            steps{
                sh 'mvn -f ./backend/pom.xml clean package -DskipTests=true'
            }
        }
        stage("Static Code analysis")
        {
            steps{
                script{
                    withSonarQubeEnv(credentialsId: 'sonar-api'){
                        sh 'mvn -f ./backend/pom.xml clean verify sonar:sonar \
                                -Dsonar.projectKey=spring-app \
                                -Dsonar.host.url=http://localhost:9000 \
                                -Dsonar.login=sqp_4f8a4d60770ffd951eb8f72fe2f8cf0c50413980'
                }
            }
        }
        }
        stage("nexus"){
            steps{
                script{
                    nexusArtifactUploader artifacts: [[artifactId: 'shop-api', classifier: '', file: './backend/target/ecommerce=spring-boot.jar', type: 'jar']], credentialsId: '', groupId: 'me.zhulin', nexusUrl: 'http://localhost:8081/', nexusVersion: 'nexus3', protocol: 'http', repository: 'springapp', version: '0.0.1-SNAPSHOT'
                    }
            }
        }
        
        
    }
    }
